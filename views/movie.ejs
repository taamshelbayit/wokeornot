<%- include('partials/header') %>
<div class="container movie-detail">
  <img src="https://image.tmdb.org/t/p/w500<%= movie.posterPath %>" class="movie-poster">
  <div class="movie-info">
    <h1><%= movie.title %></h1>
    <div class="woke-meter"><div class="fill" style="width:<%= (movie.averageRating / 10)*100 %>%"></div></div>
    <p><%= movie.averageRating.toFixed(1) %>/10 (<%= movie.ratings.length %> ratings)</p>
    <p><%= movie.description %></p>
    <a href="/movies/<%= movie._id %>/rate" class="btn-primary">Rate This Movie</a>
  </div>
</div>
<%- include('partials/footer') %>