<!-- views/movie.ejs -->
<% layout('layout') %>

<!-- Movie Details Section -->
<div class="container mt-4 movie-details">
  <div class="row">
    <div class="col-md-4">
      <% if(movie.posterPath) { %>
        <img
          src="https://image.tmdb.org/t/p/w500<%= movie.posterPath %>"
          class="img-fluid mb-3"
          alt="<%= movie.title %>"
        >
      <% } %>
    </div>
    <div class="col-md-8">
      <h2><%= movie.title %></h2>
      <p><%= movie.description %></p>
      <p>
        <strong>Average Woke Rating:</strong>
        <%= movie.averageRating.toFixed(1) %>/10
      </p>
    </div>
  </div>
</div>

<hr>

<!-- (Rec #1) Add Your Review Section -->
<div class="container mt-5">
  <h3 class="mb-3">Add Your Review</h3>
  <!-- We add a border & bg-light for better visibility -->
  <form
    action="/reviews/add/<%= movie._id %>"
    method="POST"
    class="p-4 border bg-light"
  >
    <!-- Star Rating (1-10) with aria-label for accessibility -->
    <div class="form-group">
      <label class="font-weight-bold">Woke Rating (1-10)</label>
      <div class="star-rating mb-3">
        <input
          type="radio"
          name="rating"
          id="rating-10"
          value="10"
          required
          aria-label="Rate 10 out of 10"
        >
        <label for="rating-10" title="10 stars"></label>

        <input
          type="radio"
          name="rating"
          id="rating-9"
          value="9"
          aria-label="Rate 9 out of 10"
        >
        <label for="rating-9" title="9 stars"></label>

        <input
          type="radio"
          name="rating"
          id="rating-8"
          value="8"
          aria-label="Rate 8 out of 10"
        >
        <label for="rating-8" title="8 stars"></label>

        <input
          type="radio"
          name="rating"
          id="rating-7"
          value="7"
          aria-label="Rate 7 out of 10"
        >
        <label for="rating-7" title="7 stars"></label>

        <input
          type="radio"
          name="rating"
          id="rating-6"
          value="6"
          aria-label="Rate 6 out of 10"
        >
        <label for="rating-6" title="6 stars"></label>

        <input
          type="radio"
          name="rating"
          id="rating-5"
          value="5"
          aria-label="Rate 5 out of 10"
        >
        <label for="rating-5" title="5 stars"></label>

        <input
          type="radio"
          name="rating"
          id="rating-4"
          value="4"
          aria-label="Rate 4 out of 10"
        >
        <label for="rating-4" title="4 stars"></label>

        <input
          type="radio"
          name="rating"
          id="rating-3"
          value="3"
          aria-label="Rate 3 out of 10"
        >
        <label for="rating-3" title="3 stars"></label>

        <input
          type="radio"
          name="rating"
          id="rating-2"
          value="2"
          aria-label="Rate 2 out of 10"
        >
        <label for="rating-2" title="2 stars"></label>

        <input
          type="radio"
          name="rating"
          id="rating-1"
          value="1"
          aria-label="Rate 1 out of 10"
        >
        <label for="rating-1" title="1 star"></label>
      </div>
    </div>

    <!-- Review Text -->
    <div class="form-group">
      <label class="font-weight-bold">Your Review</label>
      <textarea
        name="content"
        class="form-control"
        rows="4"
        required
      ></textarea>
    </div>

    <!-- (Rec #4) Woke Categories with Optional Icons -->
    <div class="form-group">
      <label class="font-weight-bold">Select Woke Categories:</label>
      <div class="checkbox-list">
        <% wokeCategories.forEach(category => { %>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="categories"
              value="<%= category %>"
              id="<%= category %>"
            >
            <label class="form-check-label" for="<%= category %>">
              <!-- Example icon usage with Font Awesome (optional) -->
              <!-- Replace icons to match each category if desired -->
              <i class="fas fa-bullhorn mr-1"></i>
              <%= category %>
            </label>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- (Rec #3) Prominent Submit Button -->
    <button type="submit" class="btn btn-success btn-lg mt-2">
      Submit Review
    </button>
  </form>
</div>

<hr>

<!-- Display Existing Reviews -->
<div class="container reviews mt-4">
  <h3>User Reviews</h3>
  <% if (movie.reviews.length === 0) { %>
    <p>No reviews yet. Be the first to review!</p>
  <% } else { %>
    <% movie.reviews.forEach(review => { %>
      <div class="card mb-3">
        <div class="card-body">
          <p>
            <strong>Rating:</strong> <%= review.rating %>/10
          </p>
          <p>
            <strong>Review:</strong> <%= review.content %>
          </p>
          <p>
            <strong>Categories:</strong>
            <%= review.categories.join(', ') %>
          </p>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>

<hr>

<!-- (Rec #5) Enhanced Discussion Forum -->
<div class="container forum mt-4">
  <h3>Discussion Forum</h3>
  <form
    action="/forum/add/<%= movie._id %>"
    method="POST"
    class="p-4 border bg-light"
  >
    <div class="form-group">
      <textarea
        name="content"
        class="form-control"
        placeholder="Join the discussion..."
        rows="3"
        required
      ></textarea>
    </div>
    <button type="submit" class="btn btn-primary">
      Post Comment
    </button>
  </form>

  <% if (movie.forum.length === 0) { %>
    <p class="mt-3">No comments yet. Start the discussion!</p>
  <% } else { %>
    <% movie.forum.forEach(comment => { %>
      <div class="card mt-2">
        <div class="card-body">
          <p><%= comment.content %></p>
          <!-- Show username & date if populated -->
          <small class="text-muted">
            Posted by
            <%= comment.user && comment.user.name
                ? comment.user.name
                : 'Unknown' %>
            on <%= comment.createdAt.toDateString() %>
          </small>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>
