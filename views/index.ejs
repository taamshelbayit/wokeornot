<% layout('layout') %>

<div class="hero-banner text-center text-light">
    <div class="overlay"></div>
    <div class="container">
        <h1 class="fw-bold display-4">Discover the Wokeness of Your Favorite Movies</h1>
        <p class="lead">Rate and discuss movies & TV shows based on their wokeness level.</p>
        <a href="/movies" class="btn btn-lg btn-warning mt-3">Explore Movies</a>
    </div>
</div>

<div class="container mt-5">
    <h2 class="section-title">Trending Movies</h2>
    <div class="row">
        <% movies.forEach(movie => { %>
            <div class="col-md-4 mb-4">
                <div class="movie-card">
                    <img src="<%= movie.posterPath || '/images/default-movie.jpg' %>" class="movie-poster">
                    <div class="movie-info">
                        <h5 class="movie-title"><%= movie.title %></h5>
                        <span class="badge bg-<%= movie.averageRating >= 5 ? 'success' : 'danger' %>">
                            <%= movie.averageRating.toFixed(1) %>/10
                        </span>
                        <a href="/movies/<%= movie._id %>" class="btn btn-sm btn-outline-light mt-2">View</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>