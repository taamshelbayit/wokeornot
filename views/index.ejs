<% layout('layout', { title: 'Home' }) %>
<div class="card">
  <h2>Welcome to WokeOrNot</h2>
  <% if (user) { %>
    <p>Hello, <%= user.username %>! Explore your personalized feed, join our vibrant forum, or check out the latest movie reviews.</p>
  <% } else { %>
    <p>Join our community to share your movie opinions and join engaging discussions!</p>
    <a href="/auth/register" class="button">Get Started</a>
  <% } %>
</div>
