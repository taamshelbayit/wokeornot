<%- include('partials/header') %>

<section class="hero-section">
    <div class="container">
        <h1>Welcome to <span class="highlight">WokeOrNot</span></h1>
        <p class="tagline">Rate and discover how woke your favorite movies and shows are.</p>
        <form action="/search" method="GET" class="search-form">
            <input type="text" name="q" placeholder="Search movies, series, discussions...">
            <button type="submit">Search</button>
        </form>
    </div>
</section>

<section class="featured-section">
    <div class="container">
        <h2>Trending Reviews</h2>
        <div class="cards-grid">
            <% featuredReviews.forEach(review => { %>
                <div class="card">
                    <img src="<%= review.movie.poster %>" alt="<%= review.movie.title %>">
                    <div class="card-content">
                        <h3><%= review.movie.title %></h3>
                        <p><%= review.summary %></p>
                        <a href="/movies/<%= review.movie._id %>" class="btn">Read More</a>
                    </div>
                </div>
            <% }) %>
        </div>
</section>

<section class="community-section">
    <div class="container">
        <h2>Join the Conversation</h2>
        <p>Share your thoughts and participate in lively discussions.</p>
        <a href="/forum" class="btn-primary">Visit Forum</a>
    </div>
</section>

<%- include('partials/footer') %>