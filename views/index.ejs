<% layout('layout') %>

<!-- Hero Carousel -->
<div id="heroCarousel" class="carousel slide carousel-fade" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#heroCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#heroCarousel" data-slide-to="1"></li>
    <li data-target="#heroCarousel" data-slide-to="2"></li>
  </ol>

  <div class="carousel-inner">
    <% heroItems.forEach((item, index) => { %>
      <div class="carousel-item hero-slide <%= index === 0 ? 'active' : '' %>">
        <div
          class="hero-slide-content d-flex align-items-center justify-content-center"
          style="
            background: url('https://image.tmdb.org/t/p/original<%= item.poster_path %>') center/cover no-repeat;
            min-height: 450px;
          "
        >
          <div class="container text-center" style="color: #fff; text-shadow: 1px 1px 4px rgba(0,0,0,0.7);">
            <h1 style="font-family: 'Bebas Neue', sans-serif; font-size: 3rem;">
              <%= item.title || item.name %>
            </h1>
            <p class="mb-3" style="font-size: 1.2rem;">Trending Now</p>
            <!-- "Rate This" button -->
            <a
              href="/movies/add?tmdbId=<%= item.id %>"
              class="btn btn-warning btn-lg animated-button"
              style="font-weight:600;"
            >
              Rate This
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Carousel Controls -->
  <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </a>
  <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </a>
</div>

<!-- TOP 5 MOVIES -->
<div class="container mt-5">
  <h3 class="mb-3" style="font-family: 'Bebas Neue', sans-serif; color: #333;">
    Top 5 Most Woke Movies
  </h3>
  <div class="scroll-container position-relative">
    <button class="scroll-btn left-btn" data-target="topMoviesScroll">
      <i class="fas fa-chevron-left"></i>
    </button>
    <div class="scroll-wrapper" id="topMoviesScroll">
      <% topMovies.forEach(m => { %>
        <div class="scroll-item card" data-aos="fade-up">
          <% if (m.posterPath) { %>
            <img
              src="https://image.tmdb.org/t/p/w500<%= m.posterPath %>"
              class="card-img-top"
              alt="<%= m.title %>"
            >
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= m.title %></h5>

            <!-- Woke Meter / Rating Display -->
            <% if (m.ratings && m.ratings.length > 0) { %>
              <div class="woke-meter mb-2">
                <div
                  class="woke-meter-fill"
                  style="width: <%= (m.averageRating / 10) * 100 %>%;"
                ></div>
              </div>
              <p class="mb-1 text-muted" style="font-size:0.9rem;">
                <%= m.averageRating.toFixed(1) %>/10
                <% if (m.notWokeCount > 0) { %>
                  - <%= m.notWokeCount %> Not Woke
                <% } %>
              </p>
            <% } else if (m.notWokeCount > 0) { %>
              <p style="font-size:0.9rem;"><%= m.notWokeCount %> Not Woke</p>
            <% } else { %>
              <p style="font-size:0.9rem;">No Ratings</p>
            <% } %>

            <a href="/movies/<%= m._id %>" class="btn btn-sm btn-outline-warning">View</a>
          </div>
        </div>
      <% }) %>
    </div>
    <button class="scroll-btn right-btn" data-target="topMoviesScroll">
      <i class="fas fa-chevron-right"></i>
    </button>
  </div>
</div>

