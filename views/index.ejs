<% layout('layout') %>

<div class="hero-section text-center text-white py-5" style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/images/banner.jpg') center/cover;">
    <h1 class="fw-bold">Welcome to WokeOrNot</h1>
    <p class="lead">Rate and discover movies & TV shows based on their wokeness.</p>
    <a href="/movies" class="btn btn-warning btn-lg mt-3">Explore Movies</a>
</div>

<section class="container my-5">
    <h2 class="text-primary fw-bold">Top 5 Most Woke Movies</h2>
    <div class="row">
        <% topWokeMovies.forEach(movie => { %>
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card movie-card shadow-sm">
                    <img src="<%= movie.posterPath || '/images/default-movie.jpg' %>" class="card-img-top" alt="<%= movie.title %>">
                    <div class="card-body">
                        <h5 class="card-title text-dark"><%= movie.title %></h5>
                        <div class="rating-stars">
                            <% for (let i = 1; i <= 10; i++) { %>
                                <i class="fa-star <%= i <= movie.averageRating ? 'fas' : 'far' %>"></i>
                            <% } %>
                        </div>
                        <a href="/movies/<%= movie._id %>" class="btn btn-outline-primary btn-sm">View</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>

<section class="container my-5">
    <h2 class="text-danger fw-bold">Top 5 Not Woke Movies</h2>
    <div class="row">
        <% topNotWokeMovies.forEach(movie => { %>
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card movie-card shadow-sm">
                    <img src="<%= movie.posterPath || '/images/default-movie.jpg' %>" class="card-img-top" alt="<%= movie.title %>">
                    <div class="card-body">
                        <h5 class="card-title text-dark"><%= movie.title %></h5>
                        <p class="badge bg-danger text-light">Not Woke Count: <%= movie.notWokeCount %></p>
                        <a href="/movies/<%= movie._id %>" class="btn btn-outline-danger btn-sm">View</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>

<section class="container my-5">
    <h2 class="text-warning fw-bold">Top 5 Most Woke TV Shows</h2>
    <div class="row">
        <% topWokeShows.forEach(show => { %>
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card movie-card shadow-sm">
                    <img src="<%= show.posterPath || '/images/default-show.jpg' %>" class="card-img-top" alt="<%= show.title %>">
                    <div class="card-body">
                        <h5 class="card-title text-dark"><%= show.title %></h5>
                        <div class="rating-stars">
                            <% for (let i = 1; i <= 10; i++) { %>
                                <i class="fa-star <%= i <= show.averageRating ? 'fas' : 'far' %>"></i>
                            <% } %>
                        </div>
                        <a href="/tv/<%= show._id %>" class="btn btn-outline-warning btn-sm">View</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>