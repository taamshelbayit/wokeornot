<% layout('layout', { title: 'Edit Thread' }) %>
<div class="card">
  <h2>Edit Thread</h2>
  <form action="/forum/edit/<%= thread._id %>" method="post">
    <div class="form-group">
      <label for="title">Thread Title</label>
      <input type="text" id="title" name="title" value="<%= thread.title %>" required>
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea id="content" name="content" required><%= thread.content %></textarea>
    </div>
    <button type="submit" class="button">Update Thread</button>
  </form>
</div>
