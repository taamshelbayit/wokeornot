<% layout('layout', { title: 'Forum' }) %>
<div class="card">
  <h2>Forum</h2>
  <% if (threads.length === 0) { %>
    <p>No threads available. Start a new discussion!</p>
  <% } else { %>
    <% threads.forEach(function(thread) { %>
      <div class="card" style="margin-bottom: 10px;">
        <h3><a href="/forum/thread/<%= thread._id %>"><%= thread.title %></a></h3>
        <p><%= thread.content.substring(0, 100) %>...</p>
      </div>
    <% }); %>
  <% } %>
</div>
