<% layout('layout') %>

<div class="container mt-4">
  <h2 class="text-center">Login</h2>

  <form action="/auth/login" method="POST" class="mt-3">
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" name="email" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="password">Password:</label>
      <input type="password" name="password" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Login</button>
  </form>

  <!-- Forgot Password -->
  <p class="mt-3 text-center">
    <a href="/auth/forgot-password" class="text-muted">Forgot your password?</a>
  </p>

  <!-- Resend Verification -->
  <!-- We remove the hidden input referencing 'email' -->
  <form action="/auth/resend-verification" method="POST" class="mt-2 text-center">
    <!--
      If you want the user to type their email again:
      <div class="form-group">
        <input type="email" name="email" placeholder="Enter your email" required>
      </div>
    -->
    <button type="submit" class="btn btn-link text-muted">Resend Verification Email</button>
  </form>
</div>
