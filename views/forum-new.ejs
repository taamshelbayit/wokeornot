<% layout('layout') %>

<div class="container mt-4">
  <h1 class="text-warning mb-3" style="font-family: 'Bebas Neue', sans-serif;">
    Create New Thread
  </h1>
  <div class="card bg-dark text-light">
    <div class="card-body">
      <form action="/forum/new" method="POST">
        <div class="form-group">
          <label for="title">Thread Title (optional)</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            placeholder="Enter thread title"
          >
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          <textarea
            class="form-control"
            id="content"
            name="content"
            rows="5"
            placeholder="Write your post here..."
            required
          ></textarea>
        </div>
        <button type="submit" class="btn btn-warning">Create Thread</button>
      </form>
    </div>
  </div>
</div>
