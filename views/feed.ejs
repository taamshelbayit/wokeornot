<% layout('layout') %>

<div class="container mt-4">
  <h2 class="text-warning" style="font-family: 'Bebas Neue', sans-serif;">
    Your Feed
  </h2>
  <p>Recent reviews from users you follow.</p>

  <% if (reviews.length === 0) { %>
    <p>No updates from people you follow yet.</p>
  <% } else { %>
    <% reviews.forEach(r => { %>
      <div class="card mb-2">
        <div class="card-body">
          <p>
            <strong><%= r.user.firstName %> <%= r.user.lastName %></strong> reviewed
            <a href="/movies/<%= r.movie._id %>"><%= r.movie.title %></a>
            <% if (r.rating === 0) { %>
              (Not Woke)
            <% } else { %>
              (<%= r.rating %>/10)
            <% } %>
          </p>
          <% if (r.content) { %>
            <p><%= r.content %></p>
          <% } %>
          <p>Categories: <%= r.categories.join(', ') %></p>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>
