<% layout('layout', { title: 'Your Feed' }) %>
<div class="card">
  <h2>Your Feed</h2>
  <% if (posts.length === 0) { %>
    <p>No posts available yet. Be the first to share something!</p>
  <% } else { %>
    <% posts.forEach(function(post) { %>
      <div class="card" style="margin-bottom: 10px;">
        <h3><%= post.title %></h3>
        <p><%= post.content %></p>
        <small>By <%= post.author.username %> on <%= new Date(post.date).toLocaleDateString() %></small>
      </div>
    <% }); %>
  <% } %>
</div>
