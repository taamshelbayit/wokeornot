<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <!-- Ensures proper scaling on mobile devices -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle || 'WokeOrNot' %></title>

  <!-- Google tag (gtag.js) - if you use Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-C1RWGTWZ61"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-C1RWGTWZ61');
  </script>

  <!-- Google Fonts -->
  <link
    rel="preconnect"
    href="https://fonts.googleapis.com"
  >
  <link
    rel="preconnect"
    href="https://fonts.gstatic.com"
    crossorigin
  >
  <link
    href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Poppins:wght@300;400;600&display=swap"
    rel="stylesheet"
  >

  <!-- Font Awesome (for icons) -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
  >

  <!-- Bootstrap CSS -->
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
  >

  <!-- AOS (Animate On Scroll) CSS -->
  <link
    rel="stylesheet"
    href="https://unpkg.com/aos@next/dist/aos.css"
  >

  <!-- Custom CSS (the new style.css with light background) -->
  <link
    rel="stylesheet"
    href="/css/style.css"
  >
</head>
<body>
  <!-- NAVBAR (Dark) -->
  <nav class="navbar navbar-expand-lg imdb-topbar">
    <div class="container-fluid">
      <!-- Logo/Brand -->
      <a class="navbar-brand funky-logo d-flex align-items-center" href="/">
        <img
          src="/images/logo.webp"
          alt="WokeOrNot Logo"
          width="50"
          height="50"
        >
        <span style="margin-left:8px;">WokeOrNot</span>
      </a>

      <!-- Desktop Search -->
      <form
        action="/search"
        method="GET"
        class="d-none d-lg-flex mx-auto w-50 align-items-center"
        style="max-width:600px;"
      >
        <input
          type="text"
          name="q"
          class="form-control"
          placeholder="Search for movies, TV shows, or kids titles..."
        >
        <button class="btn btn-warning" type="submit">
          <i class="fas fa-search"></i>
        </button>
        <a
          href="/search"
          class="btn btn-outline-secondary ml-2"
          style="white-space:nowrap;"
        >
          Advanced
        </a>
      </form>

      <!-- Mobile Toggler -->
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarContent"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar Links -->
      <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
        <ul class="navbar-nav">
          <!-- Movies Dropdown -->
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="moviesDropdown"
              data-toggle="dropdown"
            >
              Movies
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/movies?type=Movie">All Movies</a>
              <div class="dropdown-divider"></div>
              <!-- Common genres -->
              <a class="dropdown-item" href="/movies?type=Movie&genre=28">Action</a>
              <a class="dropdown-item" href="/movies?type=Movie&genre=35">Comedy</a>
              <a class="dropdown-item" href="/movies?type=Movie&genre=18">Drama</a>
              <!-- etc. -->
            </div>
          </li>

          <!-- TV Dropdown -->
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="tvDropdown"
              data-toggle="dropdown"
            >
              TV
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/movies?type=TV">All TV Shows</a>
              <div class="dropdown-divider"></div>
              <!-- etc. -->
            </div>
          </li>

          <!-- Kids Dropdown -->
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="kidsDropdown"
              data-toggle="dropdown"
            >
              Kids
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/movies?type=Kids">All Kids</a>
              <div class="dropdown-divider"></div>
              <!-- etc. -->
            </div>
          </li>

          <!-- Auth / Profile -->
          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/forum">Forum</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">
                Hello,
                <% if (user.name) { %>
                  <%= user.name %>
                <% } else { %>
                  <%= user.firstName %> <%= user.lastName %>
                <% } %>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile/edit">Edit Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/feed">Feed</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/notifications">
                <i class="fas fa-bell"></i> Notifications
                <span class="notif-count"></span>
              </a>
            </li>
            <% if (user.role === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link text-warning font-weight-bold" href="/admin">Admin Panel</a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Debug snippet for user data -->
  <% if (user) { %>
    <script>
      console.log("layout.ejs sees user:", <%= JSON.stringify(user) %>);
    </script>
  <% } %>

  <!-- FLASH MESSAGES -->
  <div class="container mt-3">
    <script>
      console.log("layout.ejs flash success_msg:", <%= JSON.stringify(success_msg) %>);
      console.log("layout.ejs flash error_msg:", <%= JSON.stringify(error_msg) %>);
      console.log("layout.ejs flash error:", <%= JSON.stringify(error) %>);
    </script>

    <%
      function renderFlashMessages(msgVar, alertClass) {
        if (!msgVar) return;
        if (Array.isArray(msgVar)) {
          msgVar.forEach(m => {
            if (m && m.trim().length > 0) {
    %>
              <div class="<%= alertClass %>"><%= m %></div>
    <%      }
          });
        } else if (typeof msgVar === 'string') {
          if (msgVar.trim().length > 0) {
    %>
            <div class="<%= alertClass %>"><%= msgVar %></div>
    <%    }
        }
      }
    %>

    <% renderFlashMessages(success_msg, 'alert alert-success'); %>
    <% renderFlashMessages(error_msg, 'alert alert-danger'); %>
    <% renderFlashMessages(error, 'alert alert-danger'); %>
  </div>

  <!-- Main Content (injected from child templates) -->
  <%- body %>

  <!-- Footer -->
  <footer class="mt-5 py-4" style="background-color:#1f1f1f; border-top:2px solid #333;">
    <div class="container text-center" style="color:#ccc;">
      <p class="mb-0">
        &copy; <%= new Date().getFullYear() %> WokeOrNot. All rights reserved.
      </p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script>AOS.init();</script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    window.USER_ID = "<%= user ? user._id : '' %>";
  </script>
  <script src="/js/main.js"></script>
</body>
</html>
