<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <!-- Ensures proper scaling on mobile devices -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WokeOrNot</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Poppins:wght@300;400;600&display=swap"
    rel="stylesheet"
  >

  <!-- Font Awesome (for icons) -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
  >

  <!-- Bootstrap CSS -->
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
  >

  <!-- AOS (Animate On Scroll) for animations -->
  <link
    rel="stylesheet"
    href="https://unpkg.com/aos@next/dist/aos.css"
  >

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- Top Nav Bar (IMDb-like) -->
  <nav class="navbar navbar-dark bg-dark navbar-expand-lg imdb-topbar">
    <div class="container-fluid">
      <!-- Logo on the left -->
      <a class="navbar-brand funky-logo d-flex align-items-center" href="/">
        <img
          src="/images/logo.png"
          alt="WokeOrNot Logo"
          width="50"
          height="50"
          class="mr-2"
        >
        <span>WokeOrNot</span>
      </a>

      <!-- Big Search in the center -->
      <form
        action="/search"
        method="GET"
        class="d-none d-lg-flex mx-auto w-50"
        style="max-width: 500px;"
      >
        <input
          type="text"
          name="q"
          class="form-control"
          placeholder="Search for movies, TV shows, or kids titles..."
          aria-label="Search"
        >
        <button class="btn btn-warning" type="submit">
          <i class="fas fa-search"></i>
        </button>
      </form>

      <!-- Mobile toggler -->
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarContent"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
        <ul class="navbar-nav">
          <!-- Direct links to Movies, TV, Kids -->
          <li class="nav-item">
            <a class="nav-link" href="/movies?type=Movie">Movies</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/movies?type=TV">TV</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/movies?type=Kids">Kids</a>
          </li>

          <!-- If user is logged in -->
          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/profile">
                Hello, <%= user.name %>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
            <% if (user.role === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link text-warning font-weight-bold" href="/admin">
                  Admin Panel
                </a>
              </li>
            <% } %>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/register">Register</a>
            </li>
          <% } %>
        </ul>

        <!-- For mobile view, show the big search bar below the nav links -->
        <form
          action="/search"
          method="GET"
          class="form-inline d-lg-none mt-2"
          style="width: 100%;"
        >
          <input
            type="text"
            name="q"
            class="form-control mr-2"
            placeholder="Search..."
          >
          <button class="btn btn-warning" type="submit">
            <i class="fas fa-search"></i>
          </button>
        </form>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <div class="container mt-2">
    <% if (success_msg && success_msg.length > 0) { %>
      <% success_msg.forEach(msg => { %>
        <div class="alert alert-success"><%= msg %></div>
      <% }) %>
    <% } %>
    <% if (error_msg && error_msg.length > 0) { %>
      <% error_msg.forEach(msg => { %>
        <div class="alert alert-danger"><%= msg %></div>
      <% }) %>
    <% } %>
    <% if (error && error.length > 0) { %>
      <% error.forEach(msg => { %>
        <div class="alert alert-danger"><%= msg %></div>
      <% }) %>
    <% } %>
  </div>

  <!-- Main Content (injected by child views) -->
  <%- body %>

  <!-- Footer -->
  <footer class="bg-dark text-light py-4 mt-5">
    <div class="container text-center">
      <p class="mb-0">
        &copy; <%= new Date().getFullYear() %> WokeOrNot. All rights reserved.
      </p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script
    src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js">
  </script>
  <script
    src="https://unpkg.com/aos@next/dist/aos.js">
  </script>
  <script>
    AOS.init(); // Initialize scroll animations
  </script>
  <script src="/js/main.js"></script>
</body>
</html>
