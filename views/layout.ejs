<!-- views/layout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WokeOrNot</title>

  <!-- Google Fonts: e.g. "Bebas Neue" for headings, "Poppins" for body -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Poppins:wght@300;400;600&display=swap"
    rel="stylesheet"
  >

  <!-- Font Awesome (optional) -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
  >

  <!-- Bootstrap CSS -->
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
  >

  <!-- AOS for scroll animations -->
  <link
    rel="stylesheet"
    href="https://unpkg.com/aos@next/dist/aos.css"
  >

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <a class="navbar-brand d-flex align-items-center funky-logo" href="/">
      <!-- Use your vibrant logo or text -->
      <img
        src="/images/logo.webp"
        alt="WokeOrNot Logo"
        width="50"
        height="50"
        class="mr-2"
      >
      <span>WokeOrNot</span>
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarContent"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarContent">
      <ul class="navbar-nav ml-auto">
        <!-- Direct links to Movies, TV, Kids -->
        <li class="nav-item">
          <a class="nav-link" href="/movies?type=Movie">Movies</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/movies?type=TV">TV</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/movies?type=Kids">Kids</a>
        </li>

        <!-- If user is logged in -->
        <% if (user) { %>
          <li class="nav-item">
            <a class="nav-link" href="#">Hello, <%= user.name %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
          <% if (user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link text-warning font-weight-bold" href="/admin">
                Admin Panel
              </a>
            </li>
          <% } %>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/auth/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/register">Register</a>
          </li>
        <% } %>
      </ul>
    </div>
  </nav>

  <!-- Flash messages -->
  <div class="container mt-2">
    <% if (success_msg && success_msg.length > 0) { %>
      <% success_msg.forEach(msg => { %>
        <div class="alert alert-success"><%= msg %></div>
      <% }) %>
    <% } %>
    <% if (error_msg && error_msg.length > 0) { %>
      <% error_msg.forEach(msg => { %>
        <div class="alert alert-danger"><%= msg %></div>
      <% }) %>
    <% } %>
    <% if (error && error.length > 0) { %>
      <% error.forEach(msg => { %>
        <div class="alert alert-danger"><%= msg %></div>
      <% }) %>
    <% } %>
  </div>

  <!-- Main Content -->
  <%- body %>

  <!-- Footer -->
  <footer class="bg-dark text-light py-4 mt-5">
    <div class="container text-center">
      <p class="mb-0">
        &copy; <%= new Date().getFullYear() %> WokeOrNot. All rights reserved.
      </p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script
    src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js">
  </script>
  <script
    src="https://unpkg.com/aos@next/dist/aos.js">
  </script>
  <script>
    AOS.init(); // Initialize AOS for scroll animations
  </script>
  <script src="/js/main.js"></script>
</body>
</html>
