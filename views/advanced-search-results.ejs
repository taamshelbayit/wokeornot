<% layout('layout') %>

<div class="container mt-4">
  <h2 class="text-warning mb-3" style="font-family: 'Bebas Neue', sans-serif;">
    Advanced Search Results
  </h2>

  <% if (results.length === 0) { %>
    <p>No results found.</p>
  <% } else { %>
    <div class="row">
      <% results.forEach(item => { %>
        <div class="col-md-3 col-sm-6 mb-4">
          <div class="card bg-dark h-100 text-light hover-zoom">
            <% if (item.posterPath) { %>
              <img
                src="https://image.tmdb.org/t/p/w500<%= item.posterPath %>"
                class="card-img-top"
                alt="<%= item.title %>"
              >
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= item.title %></h5>
              <% if (item.ratings && item.ratings.length > 0) { %>
                <p><%= item.averageRating.toFixed(1) %>/10</p>
              <% } else if (item.notWokeCount > 0) { %>
                <p><%= item.notWokeCount %> Not Woke</p>
              <% } else { %>
                <p>No Ratings</p>
              <% } %>
              <a href="/movies/<%= item._id %>" class="btn btn-sm btn-outline-warning">
                View
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
